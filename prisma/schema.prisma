  WOT
  RECENT
  AUCTION
}

model Sub {
  name       String                @id @db.Citext
  createdAt  DateTime              @default(now()) @map("created_at")
  updatedAt  DateTime              @default(now()) @updatedAt @map("updated_at")
  userId     Int
  parentName String?               @db.Citext
  path       Unsupported("ltree")?

